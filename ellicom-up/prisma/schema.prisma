generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  name        String
  email       String   @unique
  password    String?
  phone       String?
  role        Role
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdJobs Job[]    @relation("JobsCreated")
  handledJobs Job[]    @relation("JobsHandled")
}

model Job {
  id          String    @id @default(cuid())
  title       String
  details     String?
  status      JobStatus @default(DRAFT)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  createdById String
  handledById String?
  jobPricingId String?   // ðŸ”‘ link to JobPricing

  createdBy   User      @relation("JobsCreated", fields: [createdById], references: [id])
  handledBy   User?     @relation("JobsHandled", fields: [handledById], references: [id])
  jobPricing  JobPricing? @relation(fields: [jobPricingId], references: [id])
}

model JobPricing {
  id           String   @id @default(cuid())
  jobType      String
  materialType String?
  variable     String
  unitPrice    Float
  modifiers    String[]
  notes        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  jobs         Job[]    // ðŸ‘ˆ reverse relation
}

enum JobStatus {
  DRAFT
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum Role {
  SUPERADMIN
  ADMIN
  SECRETARY
  STAFF
  CLIENT
}

